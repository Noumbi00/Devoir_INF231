  #include <stdio.h>

    void inverser(int tab[],int n) {
        int i=0, j=n-1;
        while ( i < j ) {
             int temp = tab[i];
             tab[i] = tab[j];
             tab[j] = temp;
             i++;
             j--;
        }
    }

    int main() {
        int tab[] = {1, 2, 3, 4, 5};
        int n =5;

        printf( "AVANT INVERSION : ");
        for (int k =0; k<n; k++)
            printf("%d ", tab[k] );

        inverser(tab, n);

        printf( "APRES INVERSION : ");
        for (int k =0; k<n; k++)
            printf("%d ",tab[k] );

        return 0;
    }
